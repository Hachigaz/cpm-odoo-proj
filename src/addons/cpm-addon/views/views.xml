          <menuitem name="Investment Records" id="cpm_odoo.proj_investments_sub_menu" action="cpm_odoo.proj_planning_draft_act"/>
          <menuitem name="Unassigned Tasks" id="cpm_odoo.proj_planning_unassigned_sub_menu" action="cpm_odoo.proj_planning_unassigned_act"/>
        <menuitem/>


        <!-- project resource management ui -->
        <menuitem name="Resources and Equipments" id="cpm_odoo.proj_planning_menu" action="cpm_odoo.proj_planning_overview_act">
          <menuitem name="Overview" id="cpm_odoo.proj_planning_overview_sub_menu" action="cpm_odoo.proj_planning_overview_act"/>
          <menuitem name="Draft Tasks" id="cpm_odoo.proj_planning_draft_sub_menu" action="cpm_odoo.proj_planning_draft_act"/>
          <menuitem name="Unassigned Tasks" id="cpm_odoo.proj_planning_unassigned_sub_menu" action="cpm_odoo.proj_planning_unassigned_act"/>
        <menuitem/>
      <menuitem/>
 
