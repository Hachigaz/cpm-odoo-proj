      <!-- ============================================== -->
      <!-- ======== Create project -->
      <!-- ============================================== -->
      <record id="cpm_odoo.proj_create_new_project_act" model="ir.actions.act_window">
        <field name="name">Action Name</field>
        <field name="res_model">cpm_odoo.root_project</field>
        <field name="view_mode">form</field>
        <field name="views">(cpm_odoo.proj_create_new_project_view,form)</field>
      </record>
      

      <!-- ============================================== -->
      <!-- ======== Task menu -->
      <!-- ============================================== -->
      <record id="cpm_odoo.proj_task_overview_act" model="ir.actions.act_window">
        <field name="name">Action Name</field>
        <field name="res_model">cpm_odoo.planning_task</field>
        <field name="view_mode">form</field>
        <field name="views">cpm_odoo.proj_task_overview_view</field>
      </record>

      <record id="cpm_odoo.proj_task_task_list_act" model="ir.actions.act_window">
        <field name="name">Action Name</field>
        <field name="res_model">cpm_odoo.planning_task</field>
        <field name="view_mode">form</field>
        <field name="views">cpm_odoo.proj_task_task_list_view</field>
      </record>

      
      <!-- ============================================== -->
      <!-- ======== Task planning menus -->
      <!-- ============================================== -->
      <record id="cpm_odoo.proj_planning_overview_act" model="ir.actions.act_window">
        <field name="name">Action Name</field>
        <field name="res_model">cpm_odoo.planning_workflow</field>
        <field name="view_mode">form</field>
        <field name="views">cpm_odoo.proj_planning_overview_view</field>
      </record>











      <!-- Project root menu -->
      <menuitem name="Projects" id="cpm-odoo.proj_root">
        <!-- Create new project ui form -->
        <menuitem name="Create New Project" id="cpm_odoo.proj_create_new_project" action="cpm_odoo.proj_create_new_project_act">

        <menuitem/>


        <!-- View current tasks, summary of the tasks -->
        <menuitem name="Tasks" id="cpm_odoo.proj_task_sub_menu" action="cpm_odoo.proj_task_overview_act">
          <menuitem name="Overview" id="cpm_odoo.proj_task_overview_sub_menu" action="cpm_odoo.proj_task_overview_act"/>
          <menuitem name="Current Tasks" id="cpm_odoo.proj_task_current_task_sub_menu" action="cpm_odoo.proj_task_task_list_act"/>
        <menuitem/>


        <!-- project task planning ui -->
        <menuitem name="Planning" id="cpm_odoo.proj_planning_menu" action="cpm_odoo.proj_planning_overview_act">
          <menuitem name="Overview" id="cpm_odoo.proj_planning_overview_sub_menu" action="cpm_odoo.proj_planning_overview_act"/>
          <menuitem name="Workflows" id="cpm_odoo.proj_planning_overview_sub_menu" action="cpm_odoo.proj_planning_overview_act"/>
          <menuitem name="Draft Tasks" id="cpm_odoo.proj_planning_draft_sub_menu" action="cpm_odoo.proj_planning_draft_act"/>
