<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cpm_odoo.material_type_create_view_form" model="ir.ui.view">
            <field name="name">material_type_create_view_form.view</field>
            <field name="model">cpm_odoo.res_mgmt_mat_type</field>
            <field name="arch" type="xml">
                <form string="Material Type Info">
                    <sheet>
                        <group col="3">
                            <group colspan="2">
                                <field name="name" string="Category Name"></field>
                                <field name="description" string="Description"></field>
                            </group>
                            <group colspan="1">
                                <field name="color" widget="colorpicker" string="Category Color"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>