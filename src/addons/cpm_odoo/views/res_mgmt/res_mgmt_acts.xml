<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ============================================== -->
        <!-- ======== warehouses root menu -->
        <!-- ============================================== -->
        <record id="cpm_odoo.warehouse_overview_act" model="ir.actions.act_window">
          <field name="name">Resources Management</field>
          <field name="res_model">cpm_odoo.planning_workflow</field>
          <field name="view_mode">form</field>
        </record>
    
        <menuitem name="Resources Management" id="cpm_odoo.warehouse_root" action="cpm_odoo.warehouse_overview_act"/>

        
        <record id="cpm_odoo.assigned_warehouse_list_act" model="ir.actions.act_window">
          <field name="name">Assigned Warehouses</field>
          <field name="res_model">cpm_odoo.res_mgmt_warehouse_info</field>
          <field name="view_mode">kanban</field>
        </record>

        <menuitem name="Warehouses" parent="cpm_odoo.warehouse_root" id="cpm_odoo.assigned_warehouse_menuitem" action="cpm_odoo.assigned_warehouse_list_act"/>


        <record id="cpm_odoo.test_page" model="ir.actions.client">
          <field name="name">Test</field>
          <field name="tag">cpm_odoo.action_test</field>
          <field name="target">main</field>
        </record>

        <menuitem name="Test" parent="cpm_odoo.warehouse_root" id="cpm_odoo.warehouse_test" action="cpm_odoo.test_page"/>
    </data>
</odoo>