<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cpm_odoo.stakeholders_contractor_category_view_tree" model="ir.ui.view">
            <field name="name">cpm_odoo.stakeholders_contractor_category.view.tree</field>
            <field name="model">cpm_odoo.stakeholders_contractor_category</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"></field>
                    <field name="color" widget="colorpicker"></field>
                </tree>
            </field>
        </record>

        <record id="cpm_odoo.stakeholders_contractor_category_create_view_form" model="ir.ui.view">
            <field name="name">model_name.view.form</field>
            <field name="model">cpm_odoo.stakeholders_contractor_category</field>
            <field name="arch" type="xml">
                <form string="New Contractor">
                    <sheet string="Category Info">
                        <group col="3">
                            <field name="name" string="Category Name"></field>
                            <field name="color" widget="colorpicker" string="Category Color"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>