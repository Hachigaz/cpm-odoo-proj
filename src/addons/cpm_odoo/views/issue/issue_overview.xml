            <field name="name">cpm_odoo.risk_mgmt.tree</field>
            <field name="model">cpm_odoo.risk_mgmt</field>
            <field name="arch" type="xml">
                <tree string="Risks">
                    <field name="name"/>
                    <field name="priority" 
                      widget="badge" 
                      string="Priority"
                      decoration-muted="priority == '1'"
                      decoration-warning="priority == '2'"
                      decoration-danger="priority == '3'" />
                </tree>
            </field>
        </record> -->
    </data>
</odoo>