<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cpm_odoo.document_add_form_view" model="ir.ui.view">
            <field name="name">cpm_odoo.document_add_form_view</field>
            <field name="model">cpm_odoo.documents_document</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group col="3" string="Document Info">
                            <group colspan="2">
                                <field name="document_set_id" string="Document Set" readonly="True"></field>
                                <field name="file" widget="binary" filename="file_name"/>
                                <field name="file_name"/>
                                <field name="file_size" digits="[42,2]"/>
                            </group>
                            <group colspan="1">
                                <field name="uploaded_by"></field>
                                <field name="date_uploaded" readonly="True"></field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>    
    </data>
</odoo>
