<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="cpm_odoo.WorkOverviewPage">
        <div class="container py-4">
            <div class="task-card-section mb-3">
                <h3 class="mb-4">Recent Active Tasks</h3>
                <div class="row g-4">
                    <t t-if="this.page_data.recent_active_tasks.length>0">
                        <t t-foreach="this.page_data.recent_active_tasks" t-as="task" t-key="task.id">
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <t t-esc="task.name"/>
                                        </h5>
                                        <p class="card-text">
                                            <t t-if="task.description">
                                                <t t-esc="task.description"/>H
                                            </t>
                                            <t t-else="">
                                                No Description.
                                            </t>
                                        </p>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                Due: <t t-esc="this.constructor.formatDate(task.exp_end)"/>
                                            </small>
                                        </p>
                                        <div class="mt-3">
                                            <button class="btn btn-info btn-sm" t-on-click="()=>{act_view_task(task.id)}">View Task</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                    <t t-else="">
                        <div class="text-center">
                            No Active Tasks
                        </div>
                    </t>
                </div>
            </div>
            <div class="task-card-section mb-3">
                <h3 class="mb-4">Expiring Tasks</h3>
                <div class="row g-4">
                    <t t-if="this.page_data.expiring_tasks.length>0">
                        <t t-foreach="this.page_data.expiring_tasks" t-as="task" t-key="task.id">
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <t t-esc="task.name"/>
                                        </h5>
                                        <p class="card-text">
                                            <t t-if="task.description">
                                                <t t-esc="task.description"/>
                                            </t>
                                            <t t-else="">
                                                No Description.
                                            </t>
                                        </p>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                Due: <t t-esc="task.exp_end"/>
                                            </small>
                                        </p>
                                        <div class="mt-3">
                                            <button class="btn btn-info btn-sm" t-on-click="()=>{act_view_task(task.id)}">View Task</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                    <t t-else="">
                        <div class="text-center">
                            No Active Tasks
                        </div>
                    </t>
                </div>
            </div>
            <div class="task-card-section mb-3">
                <h3 class="mb-4">Upcoming Tasks</h3>
                <div class="row g-4">
                    <t t-if="this.page_data.upcoming_tasks.length>0">
                        <t t-foreach="this.page_data.upcoming_tasks" t-as="task" t-key="task.id">
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <t t-esc="task.name"/>
                                        </h5>
                                        <p class="card-text">
                                            <t t-if="task.description">
                                                <t t-esc="task.description"/>
                                            </t>
                                            <t t-else="">
                                                No Description.
                                            </t>
                                        </p>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                Due: <t t-esc="task.exp_end"/>
                                            </small>
                                        </p>
                                        <div class="mt-3">
                                            <button class="btn btn-info btn-sm" t-on-click="()=>{act_view_task(task.id)}">View Task</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                    <t t-else="">
                        <div class="text-center">
                            No Active Tasks
                        </div>
                    </t>
                </div>
            </div>
            <t t-if="this.page_data.expired_tasks.length>0">
                <div class="task-card-section">
                    <h3 class="mb-4">Expired Tasks</h3>
                    <div class="row g-4">
                        <t t-foreach="this.page_data.expired_tasks" t-as="task" t-key="task.id">
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <t t-esc="task.name"/>
                                        </h5>
                                        <p class="card-text">
                                            <t t-if="task.description">
                                                <t t-esc="task.description"/>
                                            </t>
                                            <t t-else="">
                                                No Description.
                                            </t>
                                        </p>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                Due: <t t-esc="task.exp_end"/>
                                            </small>
                                        </p>
                                        <div class="mt-3">
                                            <button class="btn btn-info btn-sm" t-on-click="()=>{act_view_task(task.id)}">View Task</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>