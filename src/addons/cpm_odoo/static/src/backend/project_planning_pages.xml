<templates>
    <t t-name="cpm_odoo.ProjectPlanningPage" owl="1">
        <div class="">
            <div class="pb-2">
                <div class="btn-group">
                    <div class="btn-group">
                        <t t-foreach="availablePages" t-as="page" t-key="page.id">
                            <t t-if="page.hidden !== true">
                                <button type="button" class="btn btn-secondary me-1" t-on-click="() => callSubPage(page.id)"><t t-esc="page.name"/></button>
                            </t>
                        </t>
                    </div>
                </div>
            </div>
            <div class="pt-2 pb-2" id="subpage-view">
                <t t-component="subpageComponent" context_data="props.context_data"/>
            </div>
        </div>
    </t>

    <t t-name="cpm_odoo.PlanningOverview" owl="1">
        <div class="container-fluid">
            <div class="pt-2 pb-2">
                <div class="fw-bold fs-1">
                    Overview
                </div>
            </div>
            <div class="pt-2 pb-2">
                <div class="row">
                    <div class="col-8">
                        <div class="container">
                            <div class="row">
                                <!-- To Do Column -->
                                <div class="col-md-4">
                                    <h4>To Do</h4>
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title">Task 1</h5>
                                            <p class="card-text">Description for task 1.</p>
                                        </div>
                                    </div>
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title">Task 2</h5>
                                            <p class="card-text">Description for task 2.</p>
                                        </div>
                                    </div>
                                </div>
                        
                                <!-- In Progress Column -->
                                <div class="col-md-4">
                                    <h4>In Progress</h4>
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title">Task 3</h5>
                                            <p class="card-text">Description for task 3.</p>
                                        </div>
                                    </div>
                                </div>
                        
                                <!-- Done Column -->
                                <div class="col-md-4">
                                    <h4>Done</h4>
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title">Task 4</h5>
                                            <p class="card-text">Description for task 4.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="tab1-tab" data-bs-toggle="tab" data-bs-target="#tab1" type="button" role="tab" aria-controls="tab1" aria-selected="true">Tab 1</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="tab2-tab" data-bs-toggle="tab" data-bs-target="#tab2" type="button" role="tab" aria-controls="tab2" aria-selected="false">Tab 2</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active p-3" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                                <h5>Tab 1 Content</h5>
                                <p>This is the content for tab 1.</p>
                            </div>
                            <div class="tab-pane fade p-3" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
                                <h5>Tab 2 Content</h5>
                                <p>This is the content for tab 2.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
    
    <t t-name="cpm_odoo.PlanningWorkflowList">
        <table class="table table-bordered">
          <thead class="table-primary">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Start Date</th>
              <th scope="col">Exp. End Date</th>
              <th scope="col">Options</th>
            </tr>
          </thead>
          <tbody>   
            <t t-foreach="props.page_data.workflow_list" t-as="workflow" t-key="workflow.id">
                <tr class="align-middle">
                    <th scope="row">
                        <t t-esc="workflow_index + 1"/>
                    </th>
                    <td><t t-esc="workflow.name"/></td>
                    <td><t t-esc="formatDate(workflow.start_date)"/></td>
                    <td>
                        <t t-if="workflow.exp_end">
                            <t t-esc="formatDate(workflow.exp_end)"/>
                        </t>
                        <t t-else="">
                            TBD
                        </t>
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-secondary mx-1" t-on-click="(event)=>{_do_action()}">
                            Edit General Info
                        </button>
                        <button type="button" class="btn btn-sm btn-secondary mx-1" t-on-click="(event)=>{act_manage_workflow(workflow.id)}">
                            Manage
                        </button>
                    </td>
                </tr>
            </t>
          </tbody>
        </table>
    </t>

    <t t-name="cpm_odoo.PlanningWorkflows" owl="1">
        <div class="container-fluid">
            <div class="pt-2 pb-2">
                <div class="row">
                    <div class="col-9">
                        <div class="mb-4">
                            <div class="fw-bold fs-1">
                                Workflows
                            </div>
                        </div>
                        <div class="pt-2 pb-2">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target=".workflow-main-tab #workflow-list-tab" type="button" role="tab">List</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" data-bs-toggle="tab" data-bs-target=".workflow-main-tab #workflow-graph-tab" type="button" role="tab">Graph</button>
                                </li>
                            </ul>
                            <div class="tab-content workflow-main-tab">
                                <div class="tab-pane fade show active p-3" id="workflow-list-tab" role="tabpanel">
                                    <PlanningWorkflowList page_data="page_data"/>
                                </div>
                                <div class="tab-pane fade p-3" id="workflow-graph-tab" role="tabpanel">
                                    <PlanningWorkflowGraph state_data="{workflow_list: page_data.workflow_list}" context_params="{display_size:{height:'60vh'}}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="container btn-list pb-2">
                            <t t-foreach="this.actionList" t-as="action" t-key="action.id">
                                <!-- <button type="button" class="btn btn-secondary mx-1" data-bs-toggle="modal" t-att-data-bs-target="'#'+action.id" t-on-click="(event)=>{getForm(action.view_id,event.currentTarget.parentElement.querySelector('.modal-body'))}">
                                    <t t-esc="action.name"/>
                                </button>
                                
                                <div class="modal fade" t-att-id="action.id" tabindex="-1" t-att-aria-labelledby="action.id+'_label'" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" t-att-id="action.id+'_label'">
                                                    <t t-esc="action.name"/>
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div> -->
                                <button type="button" class="btn btn-secondary mx-1" t-on-click="(event)=>{this._do_action(action.action,action.params)}">
                                    <t t-esc="action.name"/>
                                </button>
                            </t>
                        </div>
                        <div class="container pt-2 pb-2">
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target=".workflow-info-tab #tab1" type="button" role="tab">Graph</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" data-bs-toggle="tab" data-bs-target=".workflow-info-tab #tab2" type="button" role="tab">Tab 2</button>
                                </li>
                            </ul>
                            <div class="tab-content workflow-info-tab">
                                <div class="tab-pane fade show active p-3" id="tab1" role="tabpanel">
                                    <h5>Workflows</h5>
                                </div>
                                <div class="tab-pane fade p-3" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
                                    <h5>Tab 2 Content</h5>
                                    <p>This is the content for tab 2.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="cpm_odoo.PlanningDrafts" owl="1">
        <div class="">
            Drafts
        </div>
    </t>

    <t t-name="cpm_odoo.PlanningUnassignedTasks" owl="1">
        <div class="">
            Unassigned Tasks
        </div>
    </t>

    


    <!-- ===================================================== -->
    <!-- Workflow Manage UI -->
    <!-- ===================================================== -->
    <t t-name="cpm_odoo.PlanningTaskList">
        <div class="">
            <div class="mb-3">
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" t-ref="search_bar"/>
                    <button class="btn btn-primary" type="button" t-ref="search_btn" t-on-click="(event)=>{this.act_search()}">Search</button>
                </form>
            </div>
            <div class="grid gap-3">
                <t t-foreach="state_data.task_list" t-as="task" t-key="task.id">
                    <div class="card g-col-4">
                        <div class="card-body">
                            <h5 class="card-title mt-2">
                                <!-- <i class="fas fa-circle fa-sm" style="color: red; font-size:0.6rem; margin-right: 8px;"></i> -->
                                <t t-esc="task.name"/>
                            </h5>
                            <p class="card-text mt-2">
                                <t t-if="task.description">
                                    <t t-esc="task.description"/>
                                </t>
                                <t t-else="">
                                    No Description.
                                </t>
                            </p>
                            <div class="mt-2">
                                <span>
                                    <t t-esc="formatDate(task.start_date)"/> - <t t-esc="formatDate(task.exp_end)"/>
                                </span>
                            </div>
                            <div class="mt-2">
                                <span class="me-2">
                                    <i class="fa-solid fa-helmet-safety me-2"></i>
                                    <span class="">
                                        50
                                    </span>
                                </span>
                                <span class="me-2">
                                    <i class="fa-solid fa-building me-2"></i>
                                    <span class="">
                                        50
                                    </span>
                                </span>
                            </div>
                            <div class="task-options mt-3">
                                <button type="button" class="btn btn-secondary mx-1" t-on-click="(event)=>{act_manage_task(task.id)}">
                                    Manage
                                </button>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>

    <t t-name="cpm_odoo.PlanningManageWorkflow" owl="1">
        <div class="row mt-2">
            <div class="d-flex align-items-center mb-2">
                <div class="fw-bold fs-1 me-5 mb-2">
                    Manage - <t t-esc="page_data.workflow_info.name"/>
                </div>
                <div class="btn-list">
                    <t t-foreach="this.actionList" t-as="action" t-key="action.id">
                        <button type="button" class="btn btn-outline-secondary ms-1" t-on-click="(event)=>{this._do_action(action.action,action.params)}">
                            <t t-esc="action.name"/>
                        </button>
                    </t>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <ul class="nav nav-pills flex-column" role="tablist">
                        <li class="nav-item user-select-none">
                            <div class="nav-link active"  data-bs-toggle="tab" data-bs-target=".task-tabs #task-list" role="tab">
                                Tasks
                            </div>
                        </li>
                        <li class="nav-item user-select-none">
                            <div class="nav-link" data-bs-toggle="tab" data-bs-target=".task-tabs #workflow-task-schedule" role="tab">
                                Schedule
                            </div>
                        </li>
                        <li class="nav-item user-select-none">
                            <div class="nav-link" data-bs-toggle="tab" data-bs-target=".task-tabs #unassigned-task-list" role="tab">
                                Unassigned Tasks
                            </div>
                        </li>

                    </ul>
                </div>
                <div class="col-md-10">
                    <div class="tab-content task-tabs">
                        <div class="tab-pane fade show active overflow-auto" id="task-list" role="tabpanel">
                            <PlanningTaskList page_data="{task_list: page_data.task_list}">

                            </PlanningTaskList>
                        </div>
                        <div class="tab-pane fade" id="workflow-task-schedule" role="tabpanel">
                            <h4>Schedule</h4>
                            <PlanningTaskGraph state_data="{task_list: page_data.task_list}" context_params="{display_size:{height:'60vh'}}"/>
                        </div>
                        <div class="tab-pane fade" id="unassigned-task-list" role="tabpanel">
                            <h4>Unassigned Tasks</h4>
                            <p>This is the content for the tab.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
    


    <!-- ===================================================== -->
    <!-- Task Manage UI -->
    <!-- ===================================================== -->
    <t t-name="cpm_odoo.PlanningStaffList">
        <div class="" t-ref="cmp-root">
            <t t-if="state_data.staff_list">
                <t t-if="state_data.staff_list.length==0">
                    <h4>
                        No Assigned Staffs
                    </h4>
                </t>
                <t t-else="">
                    <div class="mb-3">
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" t-ref="search-bar"/>
                            <button class="btn btn-primary" type="button" t-ref="search_btn" t-on-click="(event)=>{this.itemList.act_search()}">Search</button>
                        </form>
                    </div>
                    <div class="grid gap-3 staff-card-list" id="assign-list">
                        <t t-foreach="state_data.staff_list" t-as="staff" t-key="staff.id">
                            <div class="card g-col-6" t-att-id="'staff-'+staff.id">
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-3 d-flex align-items-center">
                                            <div class="img-wrapper w-100 h-100">
                                                <img 
                                                    t-att-src="`web/image/?model=cpm_odoo.human_res_staff&amp;id=${staff.id}&amp;field=avatar_256`" alt="Image"
                                                    style="width: 100%;aspect-ratio:1/1"
                                                    class="img-fluid rounded-circle"
                                                />
                                            </div>
                                        </div>
                                        <div class="col-9 d-flex align-items-center">
                                            <div class="staff-info-wrapper rounded px-2 py-2 w-100 h-100">
                                                <h5 class="card-title">
                                                    <!-- <i class="fas fa-circle fa-sm" style="color: red; font-size:0.6rem; margin-right: 8px;"></i> -->
                                                    <t t-esc="staff.first_name + ' ' +staff.last_name"/>
                                                </h5>
                                                <span class="card-text">
                                                    <t t-if="staff.department_id">
                                                        <t t-esc="staff.department_id[1]"/>
                                                    </t>
                                                    <t t-else="">
                                                        No Department.
                                                    </t>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </div>
    </t>

    <t t-name="cpm_odoo.PlanningContractorList">
        <div class="" t-ref="cmp-root">
            <t t-if="state_data.contractor_list">
                <t t-if="state_data.contractor_list.length==0">
                    <h4>
                        No Assigned Contractors
                    </h4>
                </t>
                <t t-else="">
                    <div class="mb-3">
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" t-ref="search-bar"/>
                            <button class="btn btn-primary" type="button" t-ref="search_btn" t-on-click="(event)=>{this.itemList.act_search()}">Search</button>
                        </form>
                    </div>
                    <div class="grid gap-3 contractor-card-list" id="assign-list">
                        <t t-foreach="state_data.contractor_list" t-as="contractor" t-key="contractor.id">
                            <div class="card g-col-6" t-att-id="'contractor-'+contractor.id">
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-3 d-flex align-items-center">
                                            <div class="img-wrapper w-100 h-100">
                                                <img 
                                                    t-att-src="`web/image/?model=cpm_odoo.stakeholders_contractor&amp;id=${contractor.id}&amp;field=avatar_512`" alt="Image"
                                                    style="width: 100%;aspect-ratio:1/1"
                                                    class="img-fluid rounded-circle"
                                                />
                                            </div>
                                        </div>
                                        <div class="col-9 d-flex align-items-center">
                                            <div class="contractor-info-wrapper rounded px-2 py-2 w-100 h-100">
                                                <h5 class="card-title">
                                                    <!-- <i class="fas fa-circle fa-sm" style="color: red; font-size:0.6rem; margin-right: 8px;"></i> -->
                                                    <t t-esc="contractor.name"/>
                                                </h5>
                                                <span class="card-text">
                                                    <p>
                                                        <t t-if="contractor.description">
                                                            <t t-esc="contractor.description"/>
                                                        </t>
                                                        <t t-else="">
                                                            No Description
                                                        </t>
                                                    </p>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </div>
    </t>

    <t t-name="cpm_odoo.PlanningStaffAssignPanel">
        <t t-if="state_data.staff_list.length==0">
            <h4>
                N/A
            </h4>
        </t>
        <t t-else="">
            <div class="" t-ref="cmp-root">
                <div class="mb-3">
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" t-ref="search_bar"/>
                        <button class="btn btn-primary" type="button" t-ref="search_btn" t-on-click="(event)=>{this.act_search()}">Search</button>
                    </form>
                </div>
                <div class="grid gap-3 staff-card-list" id="assign-list">
                    <t t-foreach="state_data.staff_list" t-as="staff" t-key="staff.id">
                        <div class="card g-col-4" t-att-id="'staff-'+staff.id">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-3 d-flex align-items-center">
                                        <div class="img-wrapper w-100 h-100">
                                            <img 
                                                t-att-src="`web/image/?model=cpm_odoo.human_res_staff&amp;id=${staff.id}&amp;field=avatar_256`" alt="Image"
                                                style="width: 100%;aspect-ratio:1/1"
                                                class="img-fluid rounded-circle"
                                            />
                                        </div>
                                    </div>
                                    <div class="col-9 d-flex align-items-center">
                                        <div class="staff-info-wrapper bg-light rounded px-2 py-2 w-100 h-100">
                                            <h5 class="card-title">
                                                <!-- <i class="fas fa-circle fa-sm" style="color: red; font-size:0.6rem; margin-right: 8px;"></i> -->
                                                <t t-esc="staff.first_name + ' ' +staff.last_name"/>
                                            </h5>
                                            <span class="card-text">
                                                <t t-if="staff.department_id">
                                                    <t t-esc="staff.department_id[1]"/>
                                                </t>
                                                <t t-else="">
                                                    No Department.
                                                </t>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row pt-2 py-2">
                                    <div class="col-9">
                                        
                                    </div>
                                    <div class="col-3">
                                        <t t-set="assign_button_class" t-value="' btn btn-success rounded-pill px-3 py-1 assign-act animate__animated  '"/>
                                        <t t-set="fade_in" t-value="' animate__fadeIn '"/>
                                        <t t-set="fade_out" t-value="' d-none animate__fadeOut '"/>
                                        <t t-set="cancel_button_class" t-value="'btn btn-danger rounded-pill px-3 py-1 cancel-act animate__animated  '"/>
                                        <div class="options d-flex justify-content-end">
                                            <t t-if="props.task_info.assigned_staff_ids.length>0">
                                                <t t-if="!props.task_info.assigned_staff_ids.includes(staff.id)">
                                                    <button t-att-class="assign_button_class + fade_in" t-on-click="(event)=>{this.act_assign(staff.id)}">
                                                        Assign
                                                    </button>
                                                    <button t-att-class="cancel_button_class + fade_out" t-on-click="(event)=>{this.act_cancel(staff.id)}">
                                                        Unassign
                                                    </button>
                                                </t>
                                                <t t-else="">
                                                    <button t-att-class="assign_button_class + fade_out" t-on-click="(event)=>{this.act_assign(staff.id)}">
                                                        Assign
                                                    </button>
                                                    <button t-att-class="cancel_button_class + fade_in" t-on-click="(event)=>{this.act_cancel(staff.id)}">
                                                        Unassign
                                                    </button>
                                                </t>
                                            </t>
                                            <t t-else="">
                                                <button t-att-class="assign_button_class + fade_in" t-on-click="(event)=>{this.act_assign(staff.id)}">
                                                    Assign
                                                </button>
                                                <button t-att-class="cancel_button_class + fade_out" t-on-click="(event)=>{this.act_cancel(staff.id)}">
                                                    Unassign
                                                </button>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </t>

    <t t-name="cpm_odoo.PlanningContractorAssignPanel">
        <t t-if="state_data.contractor_list.length==0">
            <h4>
                N/A
            </h4>
        </t>
        <t t-else="">
            <div class="" t-ref="cmp-root">
                <div class="mb-3">
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" t-ref="search_bar"/>
                        <button class="btn btn-primary" type="button" t-ref="search_btn" t-on-click="(event)=>{this.act_search()}">Search</button>
                    </form>
                </div>
                <div class="grid gap-3 contractor-card-list" id="assign-list">
                    <t t-foreach="state_data.contractor_list" t-as="contractor" t-key="contractor.id">
                        <div class="card g-col-4" t-att-id="'contractor-'+contractor.id">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-3 d-flex align-items-center">
                                        <div class="img-wrapper w-100 h-100">
                                            <img 
